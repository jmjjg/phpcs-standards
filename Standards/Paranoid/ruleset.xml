<?xml version="1.0"?>
<ruleset name="ParanoidStandard">
	<description>Coding standard for PHP, which uses full PHPCompatibility and
PSR-2 standards, some rules from Generic and Squiz standards.</description>

	<rule ref="Generic.CodeAnalysis"/>
	<!-- @todo -->
	<!--<rule ref="Generic.Commenting"/>-->
	<rule ref="Generic.ControlStructures"/>
	<!-- @todo: 0xefbbbf-->
	<!--<rule ref="Generic.Files.ByteOrderMark"/>-->
	<!--<rule ref="Generic.Files.LineEndings"/>-->
	<!-- @todo, another standard -->
	<!--<rule ref="Generic.Formatting.NoSpaceAfterCast"/>-->
	<rule ref="Generic.NamingConventions.ConstructorName.OldStyle"/>
	<rule ref="Generic.PHP">
		<exclude name="Generic.PHP.CharacterBeforePHPOpeningTag"/>
		<exclude name="Generic.PHP.ClosingPHPTag.NotFound"/>
		<exclude name="Generic.PHP.LowerCaseConstant"/>
		<exclude name="Generic.PHP.LowerCaseKeyword"/>
		<exclude name="Generic.PHP.UpperCaseConstant"/>
	</rule>
	<rule ref="Generic.Strings" />

	<!-- @todo: examples -->
	<rule ref="PHPCompatibility" />

	<!-- @fixme: cherry pick -->
	<!--<rule ref="PSR2" />-->

	<rule ref="Squiz.Commenting.FunctionCommentThrowTag"/>
	<rule ref="Squiz.Scope"/>
	<rule ref="Squiz.Strings.EchoedStrings"/>
</ruleset>